page {
  height: 100%;
}
.owner-wrapper {
  width: 100%;
  height: 100%;
  position: relative;
  box-sizing: border-box;
  padding: 40rpx 40rpx 80rpx;
}
.owner-bg {
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}
.owner-bg image {
  width: 100%;
  height: 100%;
}
.owner-content {
  position: relative;
  display: flex;
  height: 100%;
  flex-direction: column;
  background:white;
  border-radius: 10rpx;
  padding: 45rpx;
  box-sizing: border-box;
  box-shadow: 0 0 10rpx rgba(51,51,51, 0.25);
  overflow: hidden;
}
.content-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
  left: 0;
  top: 0;
}
.owner-header {
  position: relative;
  z-index: 10;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #333333;
  font-size: 30rpx;
  padding-bottom: 45rpx;
  border-bottom: 1rpx #cccccc dotted;
}
.owner-header image {
  width: 124rpx;
  height: 124rpx;
  border-radius: 50%;
  border: 1rpx #ccc solid;
  margin-bottom: 28rpx;
}
.owner-body {
  position: relative;
  z-index: 10;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 50rpx 0;
  font-size: 26rpx;
  color: #999999;
  height: 300rpx;
}
.owner-body text:first-child {
  font-size: 30rpx;
  color: #333333;
}
.owner-body image {
  height: 150rpx;
  width: 150rpx;
  border-radius: 10rpx;
}
.owner-btn {
  position: relative;
  z-index: 10;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  background-color: #c30423;
  font-size: 30rpx;
  margin-top: 20rpx;
}