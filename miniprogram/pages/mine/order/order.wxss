page {
  height: 100%;
}
.order-wrapper {
  width: 100%;
  height: 100%;
  position: relative;
  box-sizing: border-box;
  padding: 40rpx 40rpx 80rpx;
}
.order-bg {
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}
.order-bg image {
  width: 100%;
  height: 100%;
}
.order-content {
  position: relative;
  display: flex;
  height: 100%;
  flex-direction: column;
  background:white;
  border-radius: 10rpx;
  padding: 45rpx;
  box-sizing: border-box;
  box-shadow: 0 0 10rpx rgba(51,51,51, 0.25);
  overflow: hidden;
}
.content-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
  left: 0;
  top: 0;
}
.order-header {
  position: relative;
  z-index: 10;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #333333;
  font-size: 30rpx;
  padding-bottom: 40rpx;
}
.order-header image {
  width: 124rpx;
  height: 124rpx;
  border-radius: 50%;
  border: 1rpx #ccc solid;
  margin-bottom: 28rpx;
}
.order-body {
  position: relative;
  z-index: 10;
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  font-size: 26rpx;
  color: #333333;
  height: 400rpx;
  border: 1rpx #ccc solid;
  border-radius: 15rpx;
  box-sizing: border-box;
}

.order-body image {
  height: 200rpx;
  width: 200rpx;
  border-radius: 10rpx;
  margin: auto;
  display: block;
}
.order-btn {
  position: relative;
  z-index: 10;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  background-color: #c30423;
  font-size: 30rpx;
  margin-top: 40rpx;
}