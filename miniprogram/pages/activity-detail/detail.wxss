page {
  
}

.detail-wrapper {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
}

.detail-header {
  width: 100%;
}

.detail-header image {
  width: 100%;
}

.detail-body {
  position: relative;
  z-index: 10;
  width: 100%;
  transform: translateY(-40rpx);
  box-sizing: border-box;
  padding: 0 40rpx 40rpx;
}
.back {
  position: fixed;
  z-index: 1000;
  right: 40rpx;
  bottom: 50%;
  transform: translateY(50%);
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background-color: rgba(184,45,57,0.7);
  display: flex;
  color: white;
  align-items: center;
  justify-content: center;
}
.text-wrapper {
  border: 1rpx #c90128 solid;
  border-radius: 15rpx;
  padding: 30rpx;
  line-height: 1.6;
  text-align: justify;
}
.dealer-wrapper {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 100;
  background-color: rgba(0,0,0,0.6);
}
.dealer-content {
  width: 576rpx;
  height: 420rpx;
  border-radius: 15rpx;
  background-color: white;
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%,-50%);
  box-sizing: border-box;
  padding: 48rpx 72rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.top-wrapper {
  width: 100%;
  text-align: center;
}
.temp-wrapper {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
}
.dealer-btn {
  position: relative;
  margin-top: 40rpx;
  height: 60rpx;
  line-height: 58rpx;
  width: 100%;
  border: 1rpx #a0a0a0 solid;
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  border-radius: 10rpx;
  color: #a0a0a0;
}
.decaler-title {
  padding-top: 40rpx;
  font-size: 32rpx;
}
.submit-btn {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #c90128;
  text-align: center;
  color: white;
  font-size: 28rpx;
}
.activity-wrapper {
  width: 670rpx;
  margin: auto;
  background: white;
  box-sizing: border-box;
  border-radius: 15rpx;
  box-shadow: 0 5rpx 25rpx 0 #ccc;
}
.activity-info {
  width: 100%;
  padding: 30rpx 30rpx 0 ;
  box-sizing: border-box;
}
.activity-name {
  width: 100%;
  display: flex;
  align-items: center;
  font-size: 30rpx;
}
.tag {
  width: 130rpx;
  height: 50rpx;
  border: 2rpx #c90128 solid;
  border-radius: 10rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #c90128;
  margin-right: 10rpx;
}
.participant {
  display: flex;
  align-items: center;
  padding-top: 30rpx;
}
.participant-item {
  margin-right: 5rpx;
}
.participant-item image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}
.sign-btn {
  width: 300rpx;
  height: 65rpx;
  margin: auto;
  line-height: 65rpx;
  background-color: #c90128;
  color: white;
  font-size: 26rpx;
  margin-top: 30rpx;
}
.sign-btn.grey {
  background-color: grey;
}
.divide-line {
  width: 100%;
  margin: 48rpx 0;
  border-top: 1rpx #ccc solid;
}
.sponsor {
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}
.sponsor image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.activity-time {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  margin: 20rpx 0;
}
.time-v-line {
  position: absolute;
  height: 60rpx;
  top: 50%;
  transform: translate(-50%,-50%);
  border: 1rpx #ccc solid;
  margin-left: 46rpx;
  z-index: 1;
}
.time-line {
  width: 100%;
  display: flex;
  align-items: center;
  margin: 10rpx 0;
  position: relative;
  z-index: 10;
}
.time-line::before {
  display: inline-block;
  margin: 0 36rpx;
  content: '';
  width: 20rpx;
  height: 20rpx;
  border: 2rpx #c90128 solid;
  border-radius: 50%;
  box-sizing: border-box;
  background-color: white;
}
.time-line.active::before {
  background-color: #c90128;
}
.activity-video {
  width: 100%;
}
.activity-video video{
  width: 100%;
  height: 350rpx;
}
.activity-intro {
  width: 100%;
}
.activity-intro image {
  width: 100%;
  height: 1559rpx;
}
.share-img {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 100;
  background-color: rgba(0,0,0,0.6);
}
.share {
  width: 600rpx;
  position: absolute;
  top: 10%;
  left: 50%;
  transform: translateX(-50%);
}
.share image {
  width: 100%;
  height: 815rpx;
}
.share-btn {
  width: 400rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  border-radius: 10rpx;
  background-color:#c90128;
  color: white;
  margin: 40rpx auto 0;
}

.winner-wrapper {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 100;
  background-color: rgba(0,0,0,0.6);
}
.winner-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.winner-content {
  position: absolute;
  width: 624rpx;
  height: 834rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  box-sizing: border-box;
  padding-top: 100rpx;
}
.winner-list {
  width: 100%;
  height: 340rpx;
  box-sizing: border-box;
}
.winner-list .list-title {
  font-size: 30rpx;
  color: #c90128;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 34rpx 0;
}
.winner .winner-item{
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666666;
  width: 100%;
  line-height: 2;
}
.winner-item text {
  display: flex;
  justify-content: center;
  width: 60%;
}
.winner-item text:first-child {
  width: 40%;
}
.winner-line {
  font-size: 24rpx;
  height: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #666666;
  width: 100%;
}
.winner-line::before,.winner-line::after {
  content: '';
  width: 130rpx;
  height: 1rpx;
  margin: 0 10rpx;
  background: #ccc;
}
.icon-close-circle {
  position: absolute;
  font-size: 60rpx;
  color: white;
  bottom: 90rpx;
  left: 50%;
  transform: translateX(-50%);
}