
@font-face {font-family: "iconfont";
  src: 
  url('data:application/x-font-woff;charset=utf-8;base64,') format('woff');
}

.iconfont {
  font-family:"iconfont" !important;
  font-size:16px;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-share:before { content: "\e622"; }

.icon-heart:before { content: "\e664"; }

.icon-view:before { content: "\e60f"; }

.icon-play:before { content: "\e624"; }

.icon-clock:before { content: "\e646"; }







.list {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.list-item-wrapper {
  box-sizing: border-box;
  padding: 10rpx 40rpx;
}
.list-item {
  width: 670rpx;
  height: 699rpx;
  margin-bottom: 31rpx;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0 0 20rpx 0 rgba(0,0,0,0.08);
  display: flex;
  flex-direction: column;
}
.item-header {
  height: 110rpx;
  width: 100%;
  flex-grow: 0;
  flex-shrink: 0;
  display: flex;
  box-sizing: border-box;
  padding: 0 30rpx;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666666;
}
.item-header .item-header-image {
  display: flex;
  align-items: center;
}
.item-header image {
  width: 70rpx;
  height: 70rpx;
  margin-right: 10rpx;
  border-radius: 50%;
}
.item-body {
  width: 100%;
  height: 490rpx;
  flex-shrink: 0;
  flex-grow: 0;
  position: relative;
  overflow: hidden;
}
.item-body-image {
  width: 100%;
  height: 100%;
}
.item-body-title {
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  color: white;
  box-sizing: border-box;
  padding: 0 30rpx;
  background-color: rgba(0,0,0,0.5);
}
.item-tags {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  min-width: 160rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 50rpx;
  border-radius: 25rpx;
  color: white;
  background-color: rgba(0,0,0,0.6); 
}
.item-image-num {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  height: 36rpx;
  border-radius: 18rpx;
  font-size: 24rpx;
  color: white;
  background-color: rgba(0,0,0,0.5);
}
.item-play {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: block!important;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  color: white;
  font-size: 0!important;
  line-height: 80rpx;
  background-color: rgba(0,0,0,0.5);
}
.item-play::before {
  font-size: 80rpx!important;
}
.item-footer {
  flex-grow: 1;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  justify-content: space-between;
  color: #666666;
}
.iconfont {
  font-size: 26rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.iconfont::before {
  font-size: 42rpx;
  margin-right: 8rpx;
}
.icon-share::before {
  font-size: 50rpx;
}
.icon-share {
  padding: 0;
  line-height: 50rpx;
  background-color: transparent;
  color: #666666;
  border-radius: 0;
}
button.icon-share {
  margin: 0;
}
button.icon-share::after {
  border: none;
}
.iconfont.active::before {
  color: #b72a3c;
}
.view-info {
  display: flex;
}
